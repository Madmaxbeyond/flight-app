<%- include('../partials/header') %>
<h1>Hello Passenger,</h1>

<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Origin</th>
            <th>Flight No.</th>
            <th>Departure</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
              <td><%= f.airline %></td>
              <td><%= f.airport %></td>
              <td><%= f.flightNo %></td>  
              <td><%= f.departs %></td>
              <td><a href="/flights/<%= f._id %>">Details</a></td>
            </tr>
            <% }); %>
    </tbody>
    </table>

<%- include('../partials/footer') %>