<%- include('../partials/header') %>
<!-- This is for the calendar drop down for choosing departing flight -->
<!-- <input type="datetime-local"> -->

<h2>Flight:</h2>
<section>
  <div>
    <%= flight.airline %> <%= flight.airport %> <%=
    flight.departs.toString().slice(0, 21) %> <%= flight.flightNo %>
  </div>

  <% flight.destinations.forEach(destination => { %>
  <div>
    <%= destination.airport %> 
    <%= destination.arrival.toString().slice(0, 21) %>
  </div>
  <% }); %>

  <br />
  <form action="/flights/<%= flight.id %>/destinations" method="POST">
    <label>Destination:</label>
    <br />
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <br />
    <br />
    <label>Arrival Date & Time:</label>
    <br />
    <input type="datetime-local" name="arrival" />
    <br />
    <br />
    <br />
    <button type="submit">Add Layover</button>
    <br />
    <br />
  </form>
</section>
<h2>Tickets:</h2>
<section>
  <ul>
    <% tickets.forEach(t => { %>
    <li>
      Seat: <b><%= t.seat %> </b> for
      <b>$<%= t.price %> </b>
    </li>
    <% }); %>
  </ul>
  <a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a>
</section>

<%- include('../partials/footer') %>
